<%- include('partials/header') -%>

<div class="container">
  <div class="">
    <h3><b><%=cup.name%></b></h3>
  </div>
  <div class="">
    <img src="<%=cup.img_banner%>" alt="" style="width:100%;">
  </div>

  <div class="">
    <h5><b>Players</b></h5>
    <% for(let player of cup.players){ %>
      <div class="container">
        <div class="row">
          <div class="col">
            <div><%=player.name%></div>
          </div>
          <div class="col">
            <div class="w3-cell">
              <div><span><%=player.wins%>-</span><%=player.draws%>-<span><%=player.losses%></span><span></span></div>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>
<div class="container">
  <h5><b>Starting Round Fixtures</b></h5>
  <% for(let fixture of cup.starting_round){ %>
  <div class="w3-border w3-round">

    <form class="" action="/score_alert/<%=cup._id%>/<%=fixture.match_id%>" method="post">

      <div class="w3-container w3-bar">
        <div class="w3-bar-item w3-right">
          <button class="w3-btn w3-ripple w3-tiny" type="submit" name="button">save result</button>
        </div>
      </div>

      <div class="w3-container w3-padding">

        <div class="row">
          <div class="col">
            <div class="w3-cell">
              <img src="<%=fixture.home_img%>" alt="">
            </div>
            <div class="w3-cell">
              <div><%=fixture.home_club%></div>
            </div>
            <div class="w3-cell">
              <div class="w3-tiny w3-padding"><b><%=fixture.home_tag%></b></div>
            </div>
          </div>
          <div class="col">
            <div class="w3-cell w3-right">
              <input class="w3-input w3-border w3-round" type="text" name="home_score" value="<%=fixture.home_goals%>" style="width:50px">
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col">
            <div class="w3-cell">
              <img src="<%=fixture.away_img%>" alt="">
            </div>
            <div class="w3-cell">
              <div><%=fixture.away_club%></div>
            </div>
            <div class="w3-cell">
              <div class="w3-tiny w3-padding"><b><%=fixture.away_tag%></b></div>
            </div>
          </div>
          <div class="col">
            <div class="w3-cell w3-right">
              <input class="w3-input w3-border w3-round" type="text" name="away_score" value="<%=fixture.away_goals%>" style="width:50px">
            </div>
          </div>
        </div>

      </div>
    </form>

  </div>
  <% } %>
</div>

<script>
function w3_open() {
  document.getElementById("main").style.marginRight = "25%";
  document.getElementById("mySidebar").style.width = "25%";
  document.getElementById("mySidebar").style.display = "block";
  document.getElementById("openNav").style.display = 'none';
}
function w3_close() {
  document.getElementById("main").style.marginRight = "0%";
  document.getElementById("mySidebar").style.display = "none";
  document.getElementById("openNav").style.display = "inline-block";
}
</script>


<%- include('partials/footer') -%>
